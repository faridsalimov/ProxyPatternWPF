<Window x:Class="ProxyPatternWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProxyPatternWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0.25*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <ListBox Name="submittedWords" Grid.Row="0"/>
        <TextBox Name="submitTextBox" Grid.Row="1" Width="170" HorizontalAlignment="Left" KeyUp="submitTextBox_KeyUp"/>
        <Button Name="submitButton" Grid.Row="1" Content="Submit" Width="130" HorizontalAlignment="Right" FontSize="20" FontWeight="Bold" Click="submitButton_Click"/>
        <ListBox Name="foundWords" Grid.Row="2"/>
    </Grid>
</Window>
